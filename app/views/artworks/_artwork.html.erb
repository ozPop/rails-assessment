<%= content_tag :div, class: 'container' do %>
  <%= image_tag(artwork.image.url, size: '400', class: 'img-responsive', alt: artwork.title) %>
  <%= artwork.title %> <br />
  <%= artwork.description %> <br />
  <%= number_to_currency(artwork.price) %> <br />
  <%= artwork.category.title %> <br />
  <%= link_to artwork.artist.email, user_path(artwork.artist)%> <br />

  <%= button_to 'Add to Cart', order_items_path(artwork_id: artwork), class: 'btn btn-primary' if user_signed_in? && artwork.artist != current_user %>
  <% if current_user && current_user.artworks.include?(artwork) %>
    <%= button_to 'Edit', edit_user_artwork_path(current_user, artwork), method: :get %> 
    <%= button_to 'Delete', user_artwork_path(current_user, artwork), method: :delete %>
  <% end %>
  <br />
<% end %>
