<%= content_tag :div, class: 'container-fluid' do %>
  <%= content_tag :h2 do %>
    Profile of: <%= @user.email %>
  <% end %>
  <%= content_tag :div, class: 'all-artworks' do %>
    <button id="my-sales">Sales</button>
    <button id="my-purchases">Purchases</button>
  <% end %>

  <%= content_tag :div, class: 'all-artworks' do %>
    <%= content_tag :h3 do %>
      All art
    <% end %>
    <%= render partial: 'artworks/artwork', collection: @artworks, as: :artwork %>
  <% end %>
<% end %>
