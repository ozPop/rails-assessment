          <p>{{description}}</p>
          <p>price: {{price}}</p>
        </div>
        <div class="artwork-controls">
          <!-- modifying these classes may affect #modifyArtwork behavior!! -->
          <button class="btn btn-default">Edit</button>
          <button class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</script>

